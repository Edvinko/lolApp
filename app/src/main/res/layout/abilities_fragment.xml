<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#000">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/roleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtChampName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="#d3bf8f"
                    android:textSize="30dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:fontFamily=""
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtEpithet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="#a09b8c"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/spellP_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/spell_icon"/>
        <TextView
            android:id="@+id/spellP_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="P"
            android:layout_gravity="center"
            android:textColor="#f0e6d2"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spellP_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e9dfcd"
        android:layout_margin="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/spellP_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75756c"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#4f441b"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/spellQ_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/spell_icon"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/spellQ_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#f0e6d2"
            android:text="Q"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spellQ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e9dfcd"
        android:layout_margin="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/spellQ_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75756c"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#4f441b"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/spellW_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/spell_icon"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/spellW_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#f0e6d2"
            android:text="W"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spellW_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e9dfcd"
        android:layout_margin="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/spellW_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75756c"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#4f441b"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/spellE_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/spell_icon"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/spellE_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#f0e6d2"
            android:text="E"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spellE_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e9dfcd"
        android:layout_margin="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/spellE_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75756c"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#4f441b"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/spellR_img"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/spell_icon"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/spellR_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#f0e6d2"
            android:text="R"
            android:textSize="48dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spellR_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#e9dfcd"
        android:layout_margin="10dp"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/spellR_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75756c"
        android:layout_margin="10dp"/>

</LinearLayout>

</ScrollView>